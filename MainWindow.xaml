<Window x:Class="PaceCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaceCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
    <StackPanel Margin="10">
        <TextBlock Text="Intervals" FontSize="30" Margin="5,0,5,5" FontWeight="DemiBold"/>
        <Grid x:Name="IntervalGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Column="0" Grid.Row="0" Margin="5" Text="Distance" FontWeight="DemiBold" FontSize="20"/>
            <TextBlock Grid.Column="1" Grid.Row="0" Margin="5" Text="Hours"    FontWeight="DemiBold" FontSize="20"/>
            <TextBlock Grid.Column="2" Grid.Row="0" Margin="5" Text="Minutes"  FontWeight="DemiBold" FontSize="20"/>
            <TextBlock Grid.Column="3" Grid.Row="0" Margin="5" Text="Seconds"  FontWeight="DemiBold" FontSize="20"/>
            <TextBlock Grid.Column="4" Grid.Row="0" Margin="5" Text=""         FontWeight="DemiBold" FontSize="20"/>

            <TextBox Grid.Column="0" Grid.Row="1" Margin="5" Text="dist"  FontSize="20"/>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="5" Text="hour"  FontSize="20"/>
            <TextBox Grid.Column="2" Grid.Row="1" Margin="5" Text="min"   FontSize="20"/>
            <TextBox Grid.Column="3" Grid.Row="1" Margin="5" Text="sec"   FontSize="20"/>
            <Button  Grid.Column="4" Grid.Row="1" Margin="5" Content="X"  FontSize="20" Padding="0,-2,0,0"/>
        </Grid>
        <Button x:Name="IntervalAddButton" Click="IntervalAddButton_Click" Content="+" FontSize="25" Height="30" Width="30" Padding="0,-6,0,0" Margin="5,0,5,0" HorizontalAlignment="Right"/>
        <Button x:Name="CalculateButton" Content="Calculate" Height="30" Margin="5"/>
    </StackPanel>
</Window>
